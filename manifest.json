{
    "name": "IPA Converter",
    "version": "1.0",
    "description": "Write the description.",
    "manifest_version": 2,
    "content_scripts": [{
        "matches": ["http://*/*", "https://*/*"],
        "js": ["convert.js"]
    }],
    "omnibox": { "keyword" : "ipa" },
    "browser_action": {
        "default_icon": "new_ipa_red.jpg",
        "default_title": "Stop / Start IPA Converter"
    },
    "background": {"scripts": ["background.js"]},
    "permissions": ["tabs", "storage"],
    "web_accessible_resources": ["word2ipa.json"]
}
